@model IEnumerable<EindwerkCarParkingLib.Parking>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ParkingNaam)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Totaal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bezet)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublicatieToelating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParkingUsersId)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Locatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soort)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingNaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totaal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bezet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicatieToelating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParkingUsersId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locatie.Straat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soort.SoortNaam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
